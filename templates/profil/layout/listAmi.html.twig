<h4>Les Amis</h4>
{% if users is defined %}
	{% for user in users %}
	{% if app.user.id is same as(user.id) %}
	{% for ami in user.amis %}
		<div>
			<a id="ami-{{ami.id}}" class="link-secondary text-decoration-none amis" href="{{ path('app_user_detail', { slug: ami.slug }) }}">
				<img class="img-profil" src="{{ ami.image }}" alt="{{ ami.nom }}" width="50px" height="50px"/>
				{{ ami.nom }}
				{{ ami.prenom }}
			</a><br/>
		</div>
	{% endfor %}
	{% endif %}
	{% endfor %}
{% else %}
	{% for ami in amisOfAmi %}
		<div>
			<a id="ami-{{ami.idAmi}}" class="link-secondary text-decoration-none amis" href="{{ path('app_user_detail', { slug: ami.slug }) }}">
				<img class="img-profil" src="{{ ami.image }}" alt="{{ ami.nom }}" width="50px" height="50px"/>
				{{ ami.nom }}
			</a><br/>
		</div>
	{% endfor %}

{% endif %}
