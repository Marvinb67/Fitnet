<h4>Utilisateurs Suivi</h4>
{% if suivis is defined %}
	{% for suivi in suivis %}
		<div>
			<a id="suivi-{{suivi.id}}" class="link-secondary text-decoration-none suivis" href="{{ path('app_user_detail', { slug: suivi.slug }) }}"><img class="img-profil" src="{{ suivi.image }}" alt="{{ suivi.nom }}" width="50px" height="50px"/>
				{{ suivi.nom }}
				{{ suivi.prenom }}</a><br/>
		</div>
	{% endfor %}
{% else %}
	{% for suivi in followUsers %}
		<div>
			<a id="suivi-{{suivi.idFollowedUser}}" class="link-secondary text-decoration-none suivis" href="{{ path('app_user_detail', { slug: suivi.slug }) }}"><img class="img-profil" src="{{ suivi.image }}" alt="{{ suivi.nom }}" width="50px" height="50px"/>
				{{ suivi.nom }}</a><br/>
		</div>
	{% endfor %}
{% endif %}
