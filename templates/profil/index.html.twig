					<div class="lespageprofil list-amis" id="page-ami">
						{% include 'profil/layout/listAmi.html.twig' %}
					</div>

					<div class="lespageprofil list-suivis" id="page-suivi">
						{% include 'profil/layout/suivi.html.twig' %}
					</div>
				</div>
			</div>

