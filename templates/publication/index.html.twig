{% extends 'base.html.twig' %}
{% block title %}Liste des publications
{% endblock %}
{% block container %}
	<div class="container my-3">
		<div class="row">
			<h1>Liste des publications</h1>
			<div class="col-md-3 my-2">
        {% include 'publication/_filter.html.twig' with {form:form} only %}
      </div>

			<div class="col-md-9 my-2">
				<div class="grid">
					{% for publication in publications %}
						{% include 'publication/_card.html.twig' with {publication: publication}
      only %}
					{% endfor %}
				</div>
			</div>
				<hr/>

		</div>
	</div>
{% endblock %}
