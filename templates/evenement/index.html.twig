{% extends 'base.html.twig' %}

{% block title %}Evénements{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    </style>

    <div class="example-wrapper">
        <h1>Liste des évènements</h1>
        {% for event in evenements %}
            <div>
                <p>{{event.user.nom}} {{event.user.prenom}}</p>
                <h2><a href="{{ path('app_evenement_show', {slug: event.slug}) }}">{{event.intitule}}</a></h2>
                <p>{{event.description}}</p>
                <p>Posté le : {{event.createdAt | date('Y/m/d')}}</p>
                <a href="{{ path('app_evenement_edit', {slug: event.slug}) }}">Modifier l'évènement</a> 
                <a href="{{ path('app_evenement_delete', {slug: event.slug}) }}">Supprimer l'évènement</a>
            </div>
            <hr>
        {% endfor %}
    </div>
{% endblock %}
